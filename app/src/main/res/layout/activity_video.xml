<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:theme="@style/ThemeOverlay.SuperliveTutorial.FullscreenContainer"
    tools:context=".video.VideoActivity"
    >

    <SurfaceView
        android:id="@+id/surface_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        >
        <SurfaceView
            android:id="@+id/surface_local"
            android:layout_width="@dimen/camera_preview_width"
            android:layout_height="@dimen/camera_preview_height"
            />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scr_chat_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/camera_chat_panel_height"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lin_channel_actions"
        tools:ignore="UselessParent"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:id="@+id/lin_chat_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/lin_channel_actions"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_join"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/join_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone"
            />
        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toTopOf="@+id/lin_channel_actions"
            android:hint="Lorem Ipsum Dolor Sit Amet"
            android:background="@drawable/bg_round_edittext"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_baseline_diamond_24" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>